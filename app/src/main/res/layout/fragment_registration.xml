<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.welcome.RegistrationFragment.RegistrationFragment">

    <TextView
        android:id="@+id/clothual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLOTHUAL"
        style="@style/textView"
        android:fontFamily="@font/montserrat_subrayada"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clothual"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/mail_48px"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextEmail"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:inputType="text"
            android:maxLength="20"
            android:hint="@string/email"
            android:background="@drawable/border_edit_text"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/inter_semibold"
            android:textStyle="bold|italic"
            android:importantForAutofill="no" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/inputCognome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputViewEmail"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/person_48px"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextSurname"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@drawable/border_edit_text"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="20"
            android:textColorHint="@color/black"
            android:hint="@string/cognome"
            android:fontFamily="@font/inter_semibold"
            android:textStyle="bold|italic"
             />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/inputNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputCognome"
        android:layout_marginTop="10dp"
        app:endIconMode="clear_text"
        android:layout_centerHorizontal="true"
        app:startIconDrawable="@drawable/person_48px"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextName"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@drawable/border_edit_text"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="20"
            android:textColorHint="@color/black"
            android:hint="@string/nome"
            android:fontFamily="@font/inter_semibold"
            android:textStyle="bold|italic"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/inputViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/inputNome"
        app:endIconMode="clear_text"
        android:layout_centerHorizontal="true"
        app:startIconDrawable="@drawable/account_circle_48px2"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextUsername"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@drawable/border_edit_text"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="20"
            android:textColorHint="@color/black"
            android:hint="@string/username_registrazion"
            android:fontFamily="@font/inter_semibold"
            android:textStyle="bold|italic" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/inputViewUsername"
        android:layout_centerHorizontal="true"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/key_48px"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPassword"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@drawable/border_edit_text"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:maxLength="20"
            android:hint="@string/password_registration"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_semibold"
            android:textStyle="bold|italic"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/condizioni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputViewPassword"
        android:layout_marginStart="20dp"
        android:textAlignment="center"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>


    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/condizioni"
        android:background="@drawable/border_button"
        android:text="@string/go_registration"
        android:textColor="@color/white"
        android:textStyle="bold"
        />



</RelativeLayout>