<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.core.Personal.History.HistoryFragment"
    android:scrollbars="none"
    android:layout_marginBottom="55dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <TextView
            android:id="@+id/shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:text="@string/shoes"
            style="@style/textView"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/inter_semibold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"/>

        <RelativeLayout
            android:id="@+id/shoesRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/shoes">

            <ProgressBar
                android:id="@+id/shoesCircularProgressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="100"
                android:progressDrawable="@drawable/circular"
                android:secondaryProgress="100" />

            <TextView
                android:id="@+id/rateShoes"
                style="@style/textView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="25sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/trousers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/trousers"
            style="@style/textView"
            android:fontFamily="@font/inter_semibold"
            app:layout_constraintStart_toStartOf="@id/shoes"
            app:layout_constraintTop_toTopOf="@id/trousersRate"
            android:textSize="20sp"/>


        <RelativeLayout
            android:id="@+id/trousersRate"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@id/shoesRate"
            app:layout_constraintStart_toEndOf="@id/shoes">

            <ProgressBar
                android:id="@+id/trousersCircularProgressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="100"
                android:progressDrawable="@drawable/circular"
                android:secondaryProgress="100" />

            <TextView
                android:id="@+id/rateTrousers"
                style="@style/textView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="25sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tshirt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/tshirt"
            style="@style/textView"
            android:fontFamily="@font/inter_semibold"
            app:layout_constraintStart_toStartOf="@id/shoes"
            app:layout_constraintTop_toTopOf="@id/tShirtRate"
            android:textSize="20sp"/>

        <RelativeLayout
            android:id="@+id/tShirtRate"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@id/trousersRate"
            app:layout_constraintStart_toEndOf="@id/shoes">

            <ProgressBar
                android:id="@+id/tShirtCircularProgressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="100"
                android:progressDrawable="@drawable/circular"
                android:secondaryProgress="100" />

            <TextView
                android:id="@+id/rateTShirt"
                style="@style/textView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="25sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/jackets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/jackets"
            style="@style/textView"
            android:fontFamily="@font/inter_semibold"
            app:layout_constraintStart_toStartOf="@id/shoes"
            app:layout_constraintTop_toTopOf="@id/jacketsRate"
            android:textSize="20sp"/>

        <RelativeLayout
            android:id="@+id/jacketsRate"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@id/tShirtRate"
            app:layout_constraintStart_toEndOf="@id/shoes">

            <ProgressBar
                android:id="@+id/jacketsCircularProgressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="100"
                android:progressDrawable="@drawable/circular"
                android:secondaryProgress="100" />

            <TextView
                android:id="@+id/rateJackets"
                style="@style/textView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="25sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/jeans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/jeans"
            style="@style/textView"
            android:fontFamily="@font/inter_semibold"
            app:layout_constraintStart_toStartOf="@id/shoes"
            app:layout_constraintTop_toTopOf="@id/jeansReate"
            android:textSize="20sp"/>

        <RelativeLayout
            android:id="@+id/jeansReate"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@id/jacketsRate"
            app:layout_constraintStart_toEndOf="@id/shoes">

            <ProgressBar
                android:id="@+id/jeansCircularProgressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="100"
                android:progressDrawable="@drawable/circular"
                android:secondaryProgress="100" />

            <TextView
                android:id="@+id/rateJeans"
                style="@style/textView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/jeansReate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@id/jeansReate"
            android:layout_marginTop="70dp">

            <TextView
                android:id="@+id/firstColorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                style="@style/textView"
                android:text="First Color"/>

            <ProgressBar
                android:id="@+id/firstColorRate"
                android:layout_width="200dp"
                android:layout_height="25dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progressDrawable="@drawable/bar_rate"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                />

            <TextView
                android:id="@+id/secondColorText"
                style="@style/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstColorText"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:text="Second Color" />

            <ProgressBar
                android:id="@+id/secondColorRate"
                android:layout_width="200dp"
                android:layout_height="25dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:layout_marginTop="2dp"
                android:progressDrawable="@drawable/bar_rate"
                android:layout_below="@id/firstColorRate"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                />

            <TextView
                android:id="@+id/thirtColorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/secondColorRate"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                style="@style/textView"
                android:text="Thirt Color"/>

            <ProgressBar
                android:id="@+id/thirtColorRate"
                android:layout_width="200dp"
                android:layout_height="25dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_below="@id/secondColorRate"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                android:max="100"
                android:progressDrawable="@drawable/bar_rate"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <!--
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="144dp"
            android:layout_height="128dp"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="175dp" />-->

