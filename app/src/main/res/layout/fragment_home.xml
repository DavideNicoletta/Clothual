<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".UI.core.HomeFragment">

    <TextView
        android:id="@+id/textViewSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="15sp"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/textViewFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="310dp"
        android:layout_marginTop="20dp"
        android:text="Filter"
        android:textColor="#546E7A"
        android:textSize="15sp" />
<!--
        <SearchView
            android:id="@+id/simpleSearchView"
            android:layout_width="263dp"
            android:layout_height="49dp"
            android:layout_marginStart="30dp"
            android:layout_below="@id/textViewSearch"
            android:background="@drawable/search_border"
            android:queryHint="Search clothes..."/>-->

    <Button
        android:id="@+id/buttonFilter"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/textViewSearch"
        android:layout_marginStart="310dp"
        android:background="@drawable/filter_botton"
        tools:ignore="SpeakableTextPresentCheck" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/buttonFilter"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/allItem"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/search_border"

                android:text="All Items" />

            <Button
            android:id="@+id/dress"
                android:background="@drawable/search_border"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"

            android:layout_height="50dp"
            android:text="Dress"/>
        <Button
            android:id="@+id/hat"
            android:background="@drawable/search_border"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Hat"/>
        <Button
            android:id="@+id/watch"
            android:background="@drawable/search_border"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Watch"/>
        <Button
            android:id="@+id/jeans"
            android:background="@drawable/search_border"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Jeans"/>
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>