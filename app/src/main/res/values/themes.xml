<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. Theme.AppCompat.DayNight.NoActionBar -->
    <style name="Theme.LightNigthThemeMode" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/backGroundMain</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

    </style>


    <!-- Style for TextInputLayout-->
    <style name="Widget.App.TextInputLayout" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColorHint">@color/black</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined</item>
        <item name="boxStrokeColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined"
        parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textCursorDrawable">@color/black</item>
    </style>

    <style name="textView" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="backgroundTint">@color/white</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="PopupOverlay" parent="Theme.AppCompat.DayNight.NoActionBar" />


</resources>