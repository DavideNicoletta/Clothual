<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LightNigthThemeMode" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">#171717</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">#303030</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here.-->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

    </style>

    <!-- Styles for TextInputLayout-->
    <style name="Widget.App.TextInputLayout" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>

        <item name="colorOnSurface">@color/gray_backround</item>
        <item name="android:textCursorDrawable">@color/white</item>
    </style>

    <style name="textView" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="hintTextColor">@color/white</item>
    </style>


    <style name="Widget.App.BottomNavigationView" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="backgroundTint">@color/black</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="Theme.AppCompat.DayNight.NoActionBar"/>

    <style name="PopupOverlay" parent="Theme.AppCompat.DayNight.NoActionBar" />
</resources>